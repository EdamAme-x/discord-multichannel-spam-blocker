{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": [
				"<node_internals>/**"
			],
			"preLaunchTask": "tsc: build - tsconfig.json",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
			"program": "${workspaceFolder}/src/main.ts",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			]
		}
	]
}